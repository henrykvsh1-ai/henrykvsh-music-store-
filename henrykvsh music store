    <!-- Purchase Modal -->
    <div id="purchaseModal" class="fixed inset-0 z-50 flex items-center justify-center p-4 modal-backdrop hidden">
        <div id="modalContent" class="modal-content text-white rounded-lg shadow-xl p-8 max-w-sm w-full text-center">
            <h2 class="text-2xl font-bold mb-4">Thank You!</h2>
            <p id="modal-album-name" class="mb-6 text-gray-300"></p>
            <p class="mb-6 text-gray-300">Full purchase functionality is coming soon. Thanks for your support!</p>
            <button id="closeModal" class="bg-gray-600 hover:bg-gray-500 text-white font-bold py-2 px-6 rounded-full">
                Close
            </button>
        </div>
    </div>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const priceButtons = document.querySelectorAll('.price-btn');
            const modal = document.getElementById('purchaseModal');
            const modalAlbumName = document.getElementById('modal-album-name');
            const closeModalBtn = document.getElementById('closeModal');

            priceButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const albumName = button.getAttribute('data-album');
                    modalAlbumName.textContent = `You're about to purchase "${albumName}".`;
                    modal.classList.remove('hidden');
                });
            });

            const closeModal = () => {
                modal.classList.add('hidden');
            };

            closeModalBtn.addEventListener('click', closeModal);
            // Also close modal if user clicks on the backdrop
            modal.addEventListener('click', (event) => {
                if (event.target === modal) {
                    closeModal();
                }
            });
        });
    </script>

